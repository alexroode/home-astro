---
import "../scss/style.scss";
import EcommerceApp from "../components/react/EcommerceApp";

interface Props {
	title: string;
}

const { title } = Astro.props;
const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon-32x32.png" />
		<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-GHTQJD3YTD"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-GHTQJD3YTD');
		</script>
		<script>
			import { Collapse, Dropdown, Popover } from "bootstrap";
			import "../utils/mobile-nav";
		</script>
		<title>{title} - Alexander Roode</title>
	</head>
	<body class="bg-gray-100 position-relative" ontouchstart="true">
		<header id="fixed-top-nav" class="d-flex flex-column">
			<div class="bg-primary-dark py-3 py-md-4">
				<div class="main-title-container container-lg pe-6">
					<a href="/" class="title-link">
						<h1 class="main-title mb-0">Alexander Roode</h1>
						<h2 class="mb-0">Composer</h2>
					</a>
					<div class="navbar-dark navbar-expand-md">
						<button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
					</div>
				</div>
			</div>
			<div class="bg-primary">
				<div class="container-lg px-0">
					<div class="navbar navbar-dark navbar-expand-md p-0">
						<div id="main-nav" class="navbar-collapse collapse">
							<ul class="nav navbar-nav font-125">
								<li class="nav-item">
									<a class="nav-link text-center" href="/">Home</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-center" href="/bio">Bio</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-center" href="/music">Music</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-center" href="/contact">Contact</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<slot name="subnav" />
		</header>
		<main class="bg-white py-3 py-md-4">
			<div class="container-lg">
				<slot />
			</div>
		</main>
		<EcommerceApp stripePublishableKey={import.meta.env.STRIPE_PUBLISHABLE_KEY} client:only />
		<footer class="py-5">
			<div class="container-lg text-center text-sm">
				<p class="text-muted">
					Â© {year} Alexander Roode | <a href="/privacy-policy">Privacy Policy</a>
				</p>
			</div>
		</footer>
	</body>
</html>
