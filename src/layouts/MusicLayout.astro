---
import Layout from "./Layout.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
    <div class="bg-gray-100" slot="subnav">
        <div class="container-lg px-0">
            <div class="navbar navbar-light navbar-expand-md p-0">
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="nav-item"><a class="nav-link text-center" href="/music/band">Band</a></li>
                        <li class="nav-item"><a class="nav-link text-center" href="/music/orchestra">Orchestra</a></li>
                        <li class="nav-item"><a class="nav-link text-center" href="/music/chamber">Chamber</a></li>
                        <li class="nav-item"><a class="nav-link text-center" href="/music/solo">Solo</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <slot />
</Layout>